<div class="container d-flex justify-content-center">
  <div class="card o-hidden shadow-lg register-patient mt-5" style="width: 50%; margin-bottom:17em;">
    <div class="card-body ">
        <div class="text-center">
          <h1 class="h4 text-gray-900 mb-4">Register Patient</h1>
        </div>
        <form class="user" method="POST" action="/patient/register">
          <div class="form-group">
            <div class="mb-3 mb-sm-0">
              <input name="name" type="text" class="form-control form-control-user"  placeholder="Name" required>
            </div>
          </div>
          <div class="form-group">
            <input name="key" type="text" class="form-control form-control-user"  placeholder="GoogleAPI key" required>
          </div>
          <div class="form-group">
            <div class="mb-3 mb-sm-0">
              <input name="city" type="text" class="form-control form-control-user"  placeholder="City" required>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
              <input name="job" type="text" class="form-control form-control-user"  placeholder="Job" required>
            </div>
            <div class="col-sm-6 mb-3 mb-sm-0">
              <input name="birthdate" type="date" class="form-control form-control-user" placeholder="Birthdate" required>
            </div>
          </div>
          <button type="submit" class="btn btn-dark btn-user btn-block">
            Register Patient
          </button>
        </form>
    </div>
</div>